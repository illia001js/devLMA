<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Logomate_Quiz_App.Views.ResultsPage">
    <VerticalStackLayout Padding="20">
        <Label Text="Results" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>

        <!-- Label to display the total number of correct answers -->
        <Label x:Name="ScoreLabel" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>

        <ScrollView>
            <StackLayout x:Name="ResultsLayout"/>
        </ScrollView>

        <Button Text="Back to Start"
                BackgroundColor="LightGray"
                TextColor="Black"
                Clicked="OnBackToStartClicked"
                Margin="0,20,0,0"/>

    </VerticalStackLayout>
</ContentPage>
